<!DOCTYPE html>
<html>
<head>
  <title>Gretchen</title>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %> 
  Welcome <%= current_user.name %>
    <%= link_to "Sign Out", signout_path %>
  <% else %>
    <%= link_to "Sign in with Google", "/auth/google_oauth2" %>
  <% end%>

  <% flash.each do |key, value| %>
    <div class="<%= key %>"><%= value %></div>
  <% end %>

  <%= yield %>

</body>
</html>
